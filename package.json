{
  "name": "edutrack360-server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "concurrently -k -n SERVER,WEB -c green,blue \"npm run dev:server\" \"npm run dev:web\"",
    "dev:web": "vite",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:gen": "prisma generate",
    "seed": "ts-node src/seed.ts",
    "dev:server": "nodemon --watch src --ext ts,json --exec \"node -r ts-node/register src/index.ts\"",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.18",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "signal": "SIGINT",
    "ignore": [
      "dist/*",
      "node_modules/*"
    ]
  }
}
