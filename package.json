{
  "name": "edutrack360-server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:gen": "prisma generate",
    "seed": "ts-node src/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.18",
    "nodemon": "^3.1.10",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "signal": "SIGINT",
    "ignore": [
      "dist/*",
      "node_modules/*"
    ]
  }
}